@model Requests.Models.Request

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input readonly="readonly" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                @Html.DropDownListFor(model => model.Status, ViewBag.Status as SelectList)
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <
            <div id="StatusBlock">
                <div class="StatusItem">
                    <h4>Статус</h4>
                    <div>
                        <label>Комментарий</label>
                        <div>
                            <input required="required" type="text" name="comment" />
                        </div>
                    </div>
                </div>
                <span asp-validation-for="StatusChange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type ="hidden" asp-for="StatusChange" value=@Model.StatusChange class="control-label"/>
              
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="datetime" value="@DateTime.Now" readonly="readonly" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
